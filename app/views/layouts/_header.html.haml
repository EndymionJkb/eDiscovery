%header.navbar
  .navbar-inner
    .container
      .row
        .span3
          = link_to t('home_html'), root_path, :class => 'brand', :id => 'logo'
        %ul.nav.pull-right
          %li
            %a{:href => "#modal-aboutUs", :data => {:toggle => "modal"}}
              About
          %li
            %a{:href => "#modal-help", :data => {:toggle => "modal"}}
              Help
          -#
            - if signed_in?
              %li= link_to t('take_test_html'), intro_path, :id => 'take_test'
              - if admin_user?
                / Don't need to translate Admin screens
                %li#fat-menu.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Candidates
                    %i.icon-caret-down
                  %ul.dropdown-menu
                    %li= link_to "Show Candidates", users_path
                    %li= link_to "Show Assessments", assessments_path
                    %li= link_to "Show Recent Activity", activity_path
                    %li= link_to "Recruiting Score Card", assessments_path(:graph => 1)
                    %li.divider
                    %li= link_to "Recruit Candidates", projects_path
                    %li= link_to "Track Candidates", track_users_path
                    %li.divider
                    %li= link_to "Export assessment data", export_assessments_path
                    %li= link_to "Export candidates", export_users_path
              %li#fat-menu.dropdown
                %a.dropdown-toggle.callout{"data-toggle" => "dropdown", :href => "#"}
                  = t('account')
                  %i.icon-caret-down
                %ul.dropdown-menu
                  %li= link_to t('show_profile'), current_user
                  %li= link_to t('edit_profile'), edit_user_path(current_user)
                  %li= link_to t('downloads'), downloads_path
                  %li.divider
                  %li= link_to t('change_password'), change_password_user_path(current_user)
                  %li.divider
                  %li
                    = link_to t('sign_out'), signout_path, method: "delete"
            - else
              %li
                = link_to t('contact'), contact_path
              %li= link_to "Register", root_url(:anchor => "getting-started"), :class => "callout"
              %li.dropdown
                %a.callout{:href => "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}}
                  Sign In
                  %i.icon-caret-down
                %ul.dropdown-menu
                  = form_for(:session, :html => {:class => "signin"}, :url => sessions_path) do |f|
                    = f.label :email
                    = f.text_field(:email, :class => "span4")
                    = f.label :password
                    = f.password_field(:password, :class => "span4")
                    = f.submit t('sign_in'), :class => "btn btn-large btn-primary"
                    = link_to "Forgot your password?", reset_password_path, :id => "forgot-password"
 